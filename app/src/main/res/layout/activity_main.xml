<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="360dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_input"
        android:drawableLeft="@drawable/icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="The place that you will visit in \n the future"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:width="140dp"
        android:height="50dp"
        android:backgroundTint="#C94820"
        android:text="Save"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:width="140dp"
        android:height="50dp"
        android:backgroundTint="#DC886E"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="@+id/save"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName"
        app:layout_constraintTop_toTopOf="@+id/save" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="360dp"
        android:layout_height="533dp"
        android:layout_marginTop="20dp"
        android:divider="@color/white"
        android:dividerHeight="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cancel"
        app:layout_constraintStart_toStartOf="@+id/save"
        app:layout_constraintTop_toBottomOf="@+id/save"

        />

</androidx.constraintlayout.widget.ConstraintLayout>